  <script>
    // ======= EASY CUSTOMIZATION =======
    // Share like: yoursite.com/?to=Maddie&from=Louise
    const params = new URLSearchParams(location.search);

    const to = params.get("to") || "you";
    const from = params.get("from") || "someone who likes you";
    const emoji = params.get("emoji") || "ğŸ»â€â„ï¸ğŸŒ¹";

    // Optional custom messages:
    const headline = params.get("headline") || `Hey ${to} ğŸ¥º`;
    const subhead  = params.get("subhead")  || `I made this just to ask you something important.`;
    const question = params.get("q")        || `Will you be my Valentine?`;
    const yayTitle = params.get("yayTitle") || `YAYYYY ğŸ’`;
    const yayMsg   = params.get("yayMsg")   || `Okay, youâ€™re officially my favourite person. ğŸ¥¹<br/>Love, ${from} â¤ï¸`;

    // Inject
    document.getElementById("toName").textContent = to;
    document.getElementById("nameSlot").textContent = to;
    document.getElementById("headline").textContent = headline;
    document.getElementById("subhead").textContent = subhead;
    document.getElementById("questionText").textContent = question;
    document.getElementById("yayTitle").textContent = yayTitle;
    document.getElementById("yayMsg").innerHTML = yayMsg;
    document.getElementById("mainEmoji").textContent = emoji;

    // ======= INTERACTION =======
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const overlay = document.getElementById("overlay");
    const closeBtn = document.getElementById("closeBtn");
    const burst = document.getElementById("burst");
    const btnArea = document.getElementById("btnArea");

    function moveNo(){
      // Move within the card area on desktop; on mobile, bounce inside button row.
      const areaRect = btnArea.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxX = Math.max(0, areaRect.width - btnRect.width);
      const maxY = Math.max(0, 110 - btnRect.height); // allow some vertical wiggle

      const x = Math.random() * maxX;
      const y = Math.random() * maxY;

      noBtn.style.position = "absolute";
      noBtn.style.left = x + "px";
      noBtn.style.top  = y + "px";
    }

    // Run-away "No" button
    noBtn.addEventListener("mouseenter", moveNo);
    noBtn.addEventListener("touchstart", (e)=>{ e.preventDefault(); moveNo(); }, {passive:false});
    noBtn.addEventListener("click", (e)=>{ e.preventDefault(); moveNo(); });

    function popHearts(){
      const hearts = ["ğŸ’—","ğŸ’–","ğŸ’˜","ğŸ’","ğŸ’•","ğŸ’","â¤ï¸","ğŸ˜"];
      for(let i=0;i<28;i++){
        const s = document.createElement("div");
        s.className = "pop";
        s.textContent = hearts[Math.floor(Math.random()*hearts.length)];
        s.style.setProperty("--dx", (Math.random()*520 - 260) + "px");
        s.style.setProperty("--dy", (Math.random()*360 - 260) + "px");
        s.style.animationDelay = (Math.random()*180)+"ms";
        burst.appendChild(s);
        setTimeout(()=>s.remove(), 1100);
      }
    }

    yesBtn.addEventListener("click", ()=>{
      overlay.style.display = "grid";
      popHearts();
      // little vibration on supported devices
      if (navigator.vibrate) navigator.vibrate([40, 40, 60]);
    });

    closeBtn.addEventListener("click", ()=> overlay.style.display="none");
    overlay.addEventListener("click", (e)=>{ if(e.target===overlay) overlay.style.display="none"; });
  </script>
