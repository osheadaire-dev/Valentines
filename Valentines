  <script>
    (function makeBG(){
      const hearts = ["ğŸ’—","ğŸ’–","ğŸ’˜","ğŸ’","ğŸ’•","ğŸ’","â¤ï¸"];
      for(let i=0;i<26;i++){
        const d=document.createElement("div");
        d.className="bg-heart";
        d.textContent=hearts[Math.floor(Math.random()*hearts.length)];
        d.style.setProperty("--x", (Math.random()*100)+"vw");
        d.style.setProperty("--s", (14+Math.random()*26)+"px");
        d.style.setProperty("--t", (10+Math.random()*18)+"s");
        d.style.animationDelay = (-Math.random()*18)+"s";
        document.body.appendChild(d);
      }
    })();
  </script>

